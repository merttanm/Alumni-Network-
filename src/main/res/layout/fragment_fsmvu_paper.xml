<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fsmvu_paper"
    >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:fadingEdge="vertical|none"
        android:fillViewport="false"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/haber1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
               >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paper1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/okul2">


                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#979595"
                        android:fontFamily="@font/acme"
                        android:text="Covıd-19 Döneminde Erasmus Nasıl mı Olur?"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/haber2_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paper2"
                    android:layout_width="421dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/sex">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:background="#979595"
                        android:fontFamily="@font/acme"
                        android:text="TÜBİTAK Yarışmasında Büyük Başarı"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/haber3_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paper3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/haber3">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#979595"
                        android:fontFamily="@font/acme"
                        android:text="Hayalimdeki Bölüm Seminerleri"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/haber4_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paper4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/duyuru8">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#979595"
                        android:fontFamily="@font/acme"
                        android:text="Yüksek Lisans, Doktora ve Sanatta Yeterlik Öğrenci Başvuruları"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/haber5_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paper5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/haber5">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#979595"
                        android:fontFamily="@font/acme"
                        android:text="1483 yıllık Ayasofya’da yeni keşifler"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/haber6_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paper6"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/haber6">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#979595"
                        android:fontFamily="@font/acme"
                        android:text="GSF Mezuniyet Sergisi bu yıl dijitalde"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</FrameLayout>